{
  "name": "TypeFast",
  "private": true,
  "scripts": {
    "build": "cd apps/web && next build",
    "start": "cd apps/web && next start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "db:setup": "cd packages/db && yarn db:setup",
    "prisma:generate": "cd packages/db && yarn db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
